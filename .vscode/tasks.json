        ],
        "pattern": {
            "regexp": "^(.*)\\((\\d+)\\):\\s+(Error|Fatal error|Warning):\\s*(.*)$",
            "file": 1,
            "line": 2,
            "severity": 3,
            "message": 4
        }
      }
    },

    { // Run the VTS tests using the build scripts.
      "label": "Run VTS Unit Tests",
      "type": "shell",
      "command": "/bin/sh build.sh unit",
      "windows": {
        "command": "build.bat unit",
      },
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "presentation": {
        "focus": true
      },
      // Taken from the Inform 6 VSCode Extension.
      // https://gitlab.com/Natrium729/vscode-inform6/-/blob/master/package.json
      "problemMatcher": {
        "owner": "inform6",
