! ------------------------------------------------------------------------------
! Meta Data
! ------------------------------------------------------------------------------

Release 0;

! Replace the Main routine from the standard library.
Replace Main;

! ------------------------------------------------------------------------------
! Libraries
! ------------------------------------------------------------------------------

! Standard libraries.
Include "parser";
Include "verblib";
Include "grammar";

! Unit test library.
Include "unit";

! Game specific testing libraries.
Include "testlamp";
Include "testpills";
Include "testtape";
Include "testnotebook";

! ------------------------------------------------------------------------------
! Test Objects
! ------------------------------------------------------------------------------

! Unit testing object.
Unit_Class Unit "Unit testing object";

! ------------------------------------------------------------------------------
! Run Tests
! ------------------------------------------------------------------------------

! Make the standard library happy.
[ Initialise;
];

! Main function for running the tests.
[ Main;
  print "Running tests for VTS.^^";

  ! Run all of the created unit tests.
  Unit.Run();

  ! Generate the report.
  Unit.Report();
];
